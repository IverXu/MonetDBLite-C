int use::generate_code( ostream &o, Symbol *root ){
	root->print( this, o );
	return 0;
}


ostream &use::gen_module( ostream &o, const Module &d ){ 
	gen_list( o, d.Deps() );
	return o; 
}

ostream &use::gen_dependency( ostream &o, const Dependency &d ){
	 d.Module()->print( this, o );
	 o << d.Name() << " ";
	 //o << d.filename() << " ";
	 return o; 
}
