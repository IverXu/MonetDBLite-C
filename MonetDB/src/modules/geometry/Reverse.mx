@f Reverse
@A Wilko Quak
@h
#ifndef __REVERSE_H__
#define __REVERSE_H__

extern bool Relate(const LineString& l,const Point& p,const char matrix[9]);
extern relationship Relate(const LineString& l,const Point& p);

#endif /* __REVERSE_H__ */
@C
#include "opengis.h"

static void reverse(const char src[9],char dest[9])
{
   dest[0] = src[0];
   dest[1] = src[3];
   dest[2] = src[6];
   dest[3] = src[1];
   dest[4] = src[4];
   dest[5] = src[7];
   dest[6] = src[2];
   dest[7] = src[5];
   dest[8] = src[8];
}

bool Relate(const LineString& l,const Point& p,const char matrix[9])
{
   char rev[9];

   reverse(matrix,rev);
   return(Relate(p,l,rev));
}

relationship Relate(const LineString& l,const Point& p)
{
   return(Relate(l,p).reverse());
}
